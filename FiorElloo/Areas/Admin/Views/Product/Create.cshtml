@using FiorEllo.Areas.Admin.ViewModels.Product
@model ProductCreateViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Create Product
                        </p>
                        <form enctype="multipart/form-data" method="post" asp-action="create" asp-controller="product" asp-area="admin" class="forms-sample">
                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <input class="form-control" asp-for="Title">
                                <span asp-validation-for="Title"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price">Price</label>
                                <input class="form-control" asp-for="Price">
                                <span asp-validation-for="Price"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Photo">Photo</label>
                                <img src="@Model.PhotoName"/>
                                <input class="form-control" asp-for="Photo">
                                <span asp-validation-for="Photo"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Photos">Photos</label>
                                <input class="form-control" asp-for="Photos">
                                <span asp-validation-for="Photos"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Quantity">Quantity</label>
                                <input class="form-control" asp-for="Quantity">
                                <span asp-validation-for="Quantity"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <textarea class="form-control" asp-for="Description"></textarea>
                                <span asp-validation-for="Description"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Weight">Weight</label>
                                <input class="form-control" asp-for="Weight">
                                <span asp-validation-for="Weight"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Dimensions">Dimensions</label>
                                <input class="form-control" asp-for="Dimensions">
                                <span asp-validation-for="Dimensions"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryId">Categories:  </label>
                               <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories"></select>
                                <span asp-validation-for="CategoryId"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#Description'))
        .then(editor => {
            console.log(editor);
        })
        .catch(error => {
            console.error(error);
        });
</script>