@using FiorEllo.Areas.Admin.ViewModels.Product;
@model ProductIndexViewModel

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Categories</h4>
                        <form method="get" asp-action="index" asp-controller="product">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="Title"></label>
                                        <input class="form-control" asp-for="Title" />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="CategoryId"></label>
                                        <select asp-for="CategoryId" asp-items="Model.Categories">
                                            <option value="">Secin!</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="MinPrice"></label>
                                        <input class="form-control" asp-for="MinPrice" />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="MaxPrice"></label>
                                        <input class="form-control" asp-for="MaxPrice" />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="MinQuantity"></label>
                                        <input class="form-control" asp-for="MinQuantity" />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="MaxQuantity"></label>
                                        <input class="form-control" asp-for="MaxQuantity" />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="CreateAtEnd"></label>
                                        <input type="date" class="form-control" asp-for="CreateAtEnd" />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="CreateAtStart"></label>
                                        <input type="date" class="form-control" asp-for="CreateAtStart" />
                                    </div>
                                </div>
                               
                                
                                <div class="form-group">
                                    <button class="btn btn-primary" type="submit">Search</button>
                                </div>
                            </div>
                        </form>
                        <a class="btn btn-main" asp-action="create" asp-controller="product" asp-area="admin">Create Product</a>
                        <div class="table-responsive">
                            <table class="table">Id
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Category</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>PhotoName</th>
                                        <th>Weight</th>
                                        <th>Dimensions</th>
                                        <th>Create at</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var products in Model.Products)
                                    {
                                        <tr>
                                            <td>@products.Id</td>
                                            <td>@products.Title</td>
                                            <td>@products.Category.</td>
                                            <td>@products.Price</td>
                                            <td>@products.Quantity</td>
                                            <td>@products.PhotoName</td>
                                            <td>@products.Weight</td>
                                            <td>@products.Dimensions</td>
                                            <td>@products.CreateAt.ToShortDateString()</td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="details" asp-controller="product" asp-area="admin" asp-route-id="@products.Id">Details</a>
                                                <a class="btn btn-danger" asp-action="delete" asp-controller="product" asp-area="admin" asp-route-id="@products.Id">Delete</a>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="product" asp-area="admin" asp-route-id="@products.Id">Update</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>