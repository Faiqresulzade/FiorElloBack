@using FiorEllo.Areas.Admin.ViewModels.FlowerExpert;
@model FlowerExpertIndexViewModel

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Categories</h4>
                        <a class="btn btn-main" asp-action="create" asp-controller="category" asp-area="admin">Create Category</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var Item in Model.FlowerExperts)
                                    {
                                        <tr>
                                            <td>@Item.Id</td>
                                            <td>@Item.Name</td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="details" asp-controller="category" asp-area="admin" asp-route-id="@Item.Id">Details</a>
                                                <a class="btn btn-danger" asp-action="delete" asp-controller="category" asp-area="admin" asp-route-id="@Item.Id">Delete</a>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="category" asp-area="admin" asp-route-id="@Item.Id">Update</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>