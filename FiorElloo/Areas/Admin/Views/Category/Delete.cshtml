@using FiorEllo.Models
@model Category
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Delete category
                        </p>
                        <br/>
                        <p>Title:</p>
                        <p>@Model.Title</p>
                    </div>
                    <form method="post" asp-action="deletecategory" asp-controller="category" asp-area="admin" asp-route-id="@Model.Id">
                        <button onclick="confirm('Eminsinizmi')" class="btn btn-dangers" >Eminsinizmi?</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>